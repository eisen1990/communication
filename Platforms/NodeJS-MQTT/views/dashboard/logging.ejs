<div>
    <h1>Message</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th> Num. </th>
                <th> Content </th>
            </tr>
        </thead>
        <tbody>
            <%
            if(Arr) {
            for(var i = 0; i < Arr.length; i++) {
            %>
            <tr>
            <td><%= i %></td>
            <td><%= Arr[i].content %></td>
            </tr>
            <%
            } } else { %>
            No data!
            <% }
            %>
            </tr>
         </tbody>
    </table>
</div>